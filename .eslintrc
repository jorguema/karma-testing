{
  "extends": "airbnb-base",
  "env": {
    "browser": true, //para poder usar window, document, etc
    "jquery": true, //allow jQuery to be referenced globally (via webpack.ProvidePlugin())
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "linebreak-style": "off",
    "no-console": "warn",
    "no-plusplus": [
      "warn",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "require-jsdoc": ["error", {
      "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": false,
          "ClassDeclaration": false,
          "ArrowFunctionExpression": false,
          "FunctionExpression": false
      }
    }],
    "valid-jsdoc": 2
  }
}
